﻿@{
var searchKeyWord = ViewBag.SearchQuery as string;
}

<govuk-input input-class="govuk-input govuk-!-width-two-thirds" input-placeholder="Search by keyword" input-value="@searchKeyWord" name="searchKeyWord">
    <govuk-input-label is-page-heading="false" class="govuk-label--s" id="page-heading">School name</govuk-input-label>
    <govuk-input-hint>For example, St Joseph's secondary school</govuk-input-hint>
    <govuk-input-after-input>
        <govuk-button id="search" type="submit">Search</govuk-button>
    </govuk-input-after-input>
</govuk-input>
